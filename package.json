    "lodash": "^4.17.21",
    "mssql": "^11.0.1",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.0",
    "p-limit": "^6.2.0",
    "passport-jwt": "^4.0.1",
    "react": "^19.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
